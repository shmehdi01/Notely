<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shmehdi.demo.notely">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_notely"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_notely_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewNote" />
        <activity android:name=".DetailedScreen"></activity>
        <activity android:name=".UpdateNote"></activity>
    </application>

</manifest>